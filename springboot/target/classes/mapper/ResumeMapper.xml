            <if test="person != null"> and resume.person = #{person}</if>
            <if test="education != null"> and resume.education = #{education}</if>
            <if test="project != null"> and resume.project = #{project}</if>
            <if test="skills != null"> and resume.skills = #{skills}</if>
            <if test="honor != null"> and resume.honor = #{honor}</if>
        </where>
        order by id desc
    </select>

