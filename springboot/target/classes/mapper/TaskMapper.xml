<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Lorrey.mapper.TaskMapper">

    <sql id="Base_Column_List">
        id,student_id,class_id,teacher_id,job_id,file,count,record,enterprise_remark,teacher_remark,report,self,grade
    </sql>

    <select id="selectAll" resultType="com.Lorrey.entity.Task">
        select task.*, student.name as studentName, classes.name as className, teacher.name as teacherName, job.name as jobName
        from task
        left join student on task.student_id = student.id
        left join classes on task.class_id = classes.id
        left join teacher on task.teacher_id = teacher.id
        left join job on task.job_id = job.id
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="studentId != null"> and student_id = #{studentId}</if>
            <if test="classId != null"> and class_id = #{classId}</if>
            <if test="teacherId != null"> and teacher_id = #{teacherId}</if>
            <if test="jobId != null"> and job_id = #{jobId}</if>
            <if test="file != null"> and file= #{file}</if>
            <if test="count != null"> and count= #{count}</if>
            <if test="record != null"> and record= #{record}</if>
            <if test="enterpriseRemark != null"> and enterprise_remark= #{enterpriseRemark}</if>
            <if test="teacherRemark != null"> and teacher_remark= #{teacherRemark}</if>
            <if test="report != null"> and report= #{report}</if>
            <if test="self != null"> and self= #{self}</if>
            <if test="grade != null"> and grade= #{grade}</if>
        </where>
    </select>

    <select id="selectById" resultType="com.Lorrey.entity.Task">
        select
        <include refid="Base_Column_List" />
        from task
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from task
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.Lorrey.entity.Task" useGeneratedKeys="true">
        insert into task
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="studentId != null">student_id,</if>
                <if test="classId != null">class_id,</if>
                <if test="teacherId != null">teacher_id,</if>
                <if test="jobId != null">job_id,</if>
                <if test="file != null">file,</if>
                <if test="count != null">count,</if>
                <if test="record != null">record,</if>
                <if test="enterpriseRemark != null">nterprise_remark,</if>
                <if test="teacherRemark != null">teacher_remark,</if>
                <if test="report != null">report,</if>
                <if test="self != null">self,</if>
                <if test="grade != null">grade,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="studentId != null">#{studentId},</if>
                <if test="classId != null">#{classId},</if>
                <if test="teacherId != null">#{teacherId},</if>
                <if test="jobId != null">#{jobId},</if>
                <if test="file != null">#{file},</if>
                <if test="count != null">#{count},</if>
                <if test="record != null">#{record},</if>
                <if test="enterpriseRemark != null">#{enterpriseRemark},</if>
                <if test="teacherRemark != null">#{teacherRemark},</if>
                <if test="report != null">#{report},</if>
                <if test="self != null">#{self},</if>
                <if test="grade != null">#{grade},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.Lorrey.entity.Task">
        update task
        <set>
            <if test="studentId != null">
                student_id = #{studentId},
            </if>
            <if test="classId != null">
                class_id = #{classId},
            </if>
            <if test="teacherId != null">
                teacher_id = #{teacherId},
            </if>
            <if test="jobId != null">
                job_id = #{jobId},
            </if>
            <if test="file != null">
                file= #{file},
            </if>
            <if test="count != null">
                count= #{count},
            </if>
            <if test="record != null">
                record= #{record},
            </if>
            <if test="enterpriseRemark != null">
                enterprise_remark= #{enterpriseRemark},
            </if>
            <if test="teacherRemark != null">
                teacher_remark= #{teacherRemark},
            </if>
            <if test="report != null">
                report= #{report},
            </if>
            <if test="self != null">
                self= #{self},
            </if>
            <if test="grade != null">
                grade= #{grade},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>
