<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Lorrey.mapper.UserActionsMapper">

    <sql id="Base_Column_List">
        id, user_id, job_id, action_type, create_time
    </sql>

    <select id="selectAll" resultType="com.Lorrey.entity.UserActions">
        select
        <include refid="Base_Column_List" />
        from useractions
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="userId != null"> and user_id = #{userId}</if>
            <if test="jobId != null"> and job_id = #{jobId}</if>
            <if test="actionType != null"> and action_type = #{actionType}</if>
            <if test="localDateTime != null"> and create_time = #{localDateTime}</if>
        </where>
    </select>

    <select id="selectById" resultType="com.Lorrey.entity.UserActions">
        select
        <include refid="Base_Column_List" />
        from useractions
        where id = #{id}
    </select>

    <select id="selectByUserId" resultType="com.Lorrey.entity.UserActions">
        select
        <include refid="Base_Column_List" />
        from useractions
        where user_id = #{userId}
    </select>

    <delete id="deleteById">
        delete from useractions
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="com.Lorrey.entity.UserActions" useGeneratedKeys="true">
        insert into useractions
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="userId != null">user_id,</if>
                <if test="jobId != null">job_id,</if>
                <if test="actionType != null">action_type,</if>
                <if test="localDateTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="userId != null">#{userId},</if>
                <if test="jobId != null">#{jobId},</if>
                <if test="actionType != null">#{actionType},</if>
                <if test="localDateTime != null">#{localDateTime},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.Lorrey.entity.UserActions">
        update useractions
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="jobId != null">
                job_id = #{jobId},
            </if>
            <if test="actionType != null">
                action_type = #{actionType},
            </if>
            <if test="localDateTime != null">
                create_time = #{localDateTime},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>
