<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Lorrey.mapper.ScoreMapper">

    <sql id="Base_Column_List">
        id,student_id,enterprise_id,teacher_id,enterprise_score,teacher_score,score
    </sql>

    <select id="selectAll" resultType="com.Lorrey.entity.Score">
        select score.*, student.name as studentName, enterprise.name as enterpriseName, teacher.name as teacherName
        from score
        left join student on student.id = score.student_id
        left join enterprise on enterprise.id = score.enterprise_id
        left join teacher on teacher.id = score.teacher_id
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="studentId != null"> and student_id= #{studentId}</if>
            <if test="enterpriseId != null"> and enterprise_id like concat('%', #{enterpriseId}, '%')</if>
            <if test="teacherId != null"> and teacher_id like concat('%', #{teacherId}, '%')</if>
            <if test="enterpriseScore != null"> and enterprise_score= #{enterpriseScore}</if>
            <if test="teacherScore != null"> and teacher_score= #{teacherScore}</if>
            <if test="score != null"> and score= #{score}</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.Lorrey.entity.Score">
        select
        <include refid="Base_Column_List" />
        from score
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from score
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.Lorrey.entity.Score" useGeneratedKeys="true">
        insert into score
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="studentId != null">student_id,</if>
                <if test="enterpriseId != null">enterprise_id,</if>
                <if test="teacherId != null">teacher_id,</if>
                <if test="enterpriseScore != null">enterprise_score,</if>
                <if test="teacherScore != null">teacher_score,</if>
                <if test="score != null">score,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="studentId != null">#{studentId},</if>
                <if test="enterpriseId != null">#{enterpriseId},</if>
                <if test="teacherId != null">#{teacherId},</if>
                <if test="enterpriseScore != null">#{enterpriseScore},</if>
                <if test="teacherScore != null">#{teacherScore},</if>
                <if test="score != null">#{score},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.Lorrey.entity.Score">
        update score
        <set>
            <if test="studentId != null">
                student_id = #{studentId},
            </if>
            <if test="enterpriseId != null">
                enterprise_id = #{enterpriseId},
            </if>
            <if test="teacherId != null">
                teacher_id = #{teacherId},
            </if>
            <if test="enterpriseScore != null">
                enterprise_score = #{enterpriseScore},
            </if>
            <if test="teacherScore != null">
                teacher_score = #{teacherScore},
            </if>
            <if test="score != null">
                score = #{score},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>
