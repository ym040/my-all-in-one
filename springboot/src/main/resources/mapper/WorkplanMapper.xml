<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Lorrey.mapper.WorkplanMapper">

    <sql id="Base_Column_List">
        id,name,content,time
    </sql>

    <select id="selectAll" resultType="com.Lorrey.entity.Workplan">
        select
        <include refid="Base_Column_List" />
        from workplan
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="name != null"> and name like concat('%', #{name}, '%')</if>
            <if test="content != null"> and content= #{content}</if>
            <if test="time != null"> and time= #{time}</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.Lorrey.entity.Workplan">
        select
        <include refid="Base_Column_List" />
        from workplan
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from workplan
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.Lorrey.entity.Workplan" useGeneratedKeys="true">
        insert into workplan
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="content != null">content,</if>
            <if test="time != null">time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="content != null">#{content},</if>
            <if test="time != null">#{time},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.Lorrey.entity.Workplan">
        update workplan
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>
